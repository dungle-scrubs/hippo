{
	"name": "hippo",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"exports": {
		".": "./dist/index.js"
	},
	"scripts": {
		"build": "tsc",
		"check": "biome check .",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"lint:fix": "biome lint --fix .",
		"prepare": "husky",
		"test": "vitest run",
		"test:watch": "vitest",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@mariozechner/pi-agent-core": "0.52.12",
		"@mariozechner/pi-ai": "0.52.12",
		"better-sqlite3": "^12.6.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"@types/better-sqlite3": "^7.6.13",
		"husky": "^9.1.7",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	},
	"engines": {
		"node": ">=22"
	},
	"packageManager": "pnpm@10.28.1",
	"pnpm": {
		"onlyBuiltDependencies": [
			"better-sqlite3",
			"esbuild"
		]
	}
